<div >
  <div >
    <h1><%= @task.title %></h1>
    <div >
      <span><%= link_to "Edit this task", edit_task_path %></span>
    </div>
  </div>
  <div >
    <p role="alert"><%= @task.details %></p>
    <% if @task.completed? %>
      <div><span>This task is complete</span></div>
    <% else %>
      <div>
        <span>This task has not been completed yet</span>
      </div>
    <% end %>
  </div>
  <div >
    <div >
      <span><%= link_to "Back to list", tasks_path %></span>
    </div>
  </div>
</div>

