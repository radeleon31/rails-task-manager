<div class="container">
  <h1>My Task</h1>

  <ul>
    <% @tasks.each do |task| %>
      <% if task.completed == true %>
        <li><input type="checkbox"> <%= link_to task.title, task_path(task) %></li>
        <% else %>
        <li><input type="checkbox"><%= link_to task.title, task_path(task) %></li>
      <% end %>
    <% end %>
  </ul>
 </div>


  <div class="back-link">
    <span><%= link_to "Add a new task", new_task_path %>
    </span>
  </div>



